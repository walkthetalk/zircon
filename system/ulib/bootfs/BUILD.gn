library("bootfs") {
  sdk = "source"
  sdk_headers = [ "lib/bootfs/parser.h" ]

  sources = [
    "parser.cc",
  ]
  configs += [ "$zx/public/gn/config:visibility_hidden" ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

test("bootfs-test") {
  sources = [
    "parser-test.cc",
  ]
  deps = [
    "$zx/system/ulib/bootfs",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
