library("unittest") {
  sdk = "source"
  sdk_headers = [ "unittest/unittest.h" ]
  testonly = true
  host = true
  shared = true
  sources = [
    "all-tests.cc",
    "unittest-main.cc",
    "unittest.cc",
    "watchdog.cc",
  ]
  deps = [
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/pretty",
  ]
  if (current_os == "linux") {
    libs = [ "pthread" ]
  }
  if (is_fuchsia) {
    deps += [ "$zx/system/ulib/zx" ]
  }
}
