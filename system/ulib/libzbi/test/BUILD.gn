group("test") {
  testonly = true
  deps = [
    ":zbi",
  ]
}

test("zbi") {
  sources = [
    "zbi.cc",
  ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/libzbi",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/unittest",
  ]

  if (is_fuchsia) {
    deps += [
      "$zx/system/ulib/fdio",
      "$zx/system/ulib/zx",
    ]
  }
}
