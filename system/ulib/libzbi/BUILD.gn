library("libzbi") {
  output_prefix_override = true
  sdk = "static"
  sdk_headers = [
    "libzbi/zbi-cpp.h",
    "libzbi/zbi-split.h",
    "libzbi/zbi-zx.h",
    "libzbi/zbi.h",
  ]
  host = true
  kernel = true
  static = true
  sources = [
    "zbi.c",
  ]
  if (is_fuchsia && !is_kernel) {
    sources += [ "zbi-zx.cc" ]
    deps = [
      "$zx/system/ulib/fbl",
      "$zx/system/ulib/zx",
    ]
  }
}
