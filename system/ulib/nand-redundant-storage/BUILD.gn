# MTD Redundant Storage (mtd-rs)
#
# This library requires an environment with mtd/mtd-user.h and MTD support.

library("nand-redundant-storage") {
  host = true

  if (current_os == "linux") {
    sources = [
      "nand-rs.cc",
    ]
  }

  public_deps = [
    "$zx/system/ulib/mtd",
  ]

  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/log",
    "$zx/third_party/ulib/cksum",
  ]
}
