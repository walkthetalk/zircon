  testonly = true

  deps = [
    ":ftl-volume-wrapper",
    ":nand-volume-driver",
  ]
}

source_set("common") {
  testonly = true

  sources = [
    "fake-nand-interface.cc",
  ]

  deps = [
    "$zx/system/ulib/mtd:headers",
  ]
}

