  test_group = "fs"
  sources = [
    "allocator-test.cc",
    "main.cc",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-minfs:c",
    "$zx/system/ulib/block-client",
    "$zx/system/ulib/minfs",
    "$zx/system/ulib/zxtest",
  ]

  include_dirs = [ ".." ]
}
