driver("nandpart") {
  sources = [
    "aml-bad-block.cc",
    "bad-block.cc",
    "nandpart-utils.cc",
    "nandpart.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.badblock",
    "$zx/system/banjo/ddk.protocol.nand",
    "$zx/system/dev/lib/operation",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

test("nandpart-test") {
  output_name = "nandpart-test"
  sources = [
    "aml-bad-block.cc",
    "bad-block.cc",
    "nandpart-utils.cc",
    "test/aml-bad-block-test.cc",
    "test/nandpart-utils-test.cc",
  ]
  include_dirs = [ "." ]
  deps = [
    "$zx/system/banjo/ddk.protocol.nand",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
