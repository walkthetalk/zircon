import("$zx/public/gn/firmware.gni")

driver("bt-hci-mediatek") {
  sources = [
    "bt-hci-mediatek.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.bt.hci",
    "$zx/system/banjo/ddk.protocol.sdio",
    "$zx/system/dev/lib/device-protocol-pdev",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
  data_deps = [
    ":firmware",
  ]
}

firmware("firmware") {
  sources = [
    "$firmware_dir/bluetooth/mt7668/mt7668_patch_e2_hdr.bin",
  ]
}

test("bt-hci-mediatek-test") {
  output_name = "bt-hci-mediatek-test"
  sources = [
    "bt-hci-mediatek-test.cc",
    "bt-hci-mediatek.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.bt.hci",
    "$zx/system/banjo/ddk.protocol.sdio",
    "$zx/system/dev/lib/device-protocol-pdev",
    "$zx/system/dev/lib/mock-sdio",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/mock-function",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
