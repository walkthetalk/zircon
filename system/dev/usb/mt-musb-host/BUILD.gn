driver("mt-musb-host") {
  deps = [
    ":common",
  ]
}

source_set("common") {
  visibility = [ ":*" ]
  sources = [
    "usb-device.cc",
    "usb-hci.cc",
    "usb-request-queue.cc",
    "usb-root-hub.cc",
    "usb-spew.cc",
    "usb-transaction.cc",
  ]
  public_deps = [
    "$zx/system/banjo/ddk.protocol.usb.bus",
    "$zx/system/banjo/ddk.protocol.usb.hci",
    "$zx/system/dev/lib/device-protocol-pdev",
    "$zx/system/dev/lib/mmio",
    "$zx/system/dev/lib/mt8167",
    "$zx/system/dev/lib/usb",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/hwreg",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

test("mt-hci-test") {
  output_name = "mt-hci-test"
  sources = [
    "usb-hci-test.cc",
  ]
  deps = [
    ":common",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/ulib/zxtest",
  ]
}

test("mt-hci-transaction-test") {
  sources = [
    "usb-transaction-test.cc",
    "usb-transaction.cc",
  ]
  deps = [
    "$zx/system/dev/lib/device-protocol-pdev",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/dev/lib/mmio",
    "$zx/system/dev/lib/mt8167",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/hwreg",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}

test("mt-hci-request-queue-test") {
  sources = [
    "usb-request-queue-test.cc",
    "usb-request-queue.cc",
    "usb-transaction.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.usb.hci",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/dev/lib/mmio",
    "$zx/system/dev/lib/mt8167",
    "$zx/system/dev/lib/usb",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/hwreg",
    "$zx/system/ulib/mock-function",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
